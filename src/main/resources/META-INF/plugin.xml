<idea-plugin>
    <id>org.softeng.Design-Pattern-Doc</id>
    <name>Design Pattern Doc</name>
    <version>1.0-SNAPSHOT</version>
    <vendor>FilipeLemos</vendor>

    <description><![CDATA[
    Plugin for documenting and detecting design patterns.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="storage.PluginState"/>

        <localInspection language="JAVA"
                          displayName="Suggestion of Pattern Role"
                          groupName="Example inspections"
                          groupPath="Java"
                          enabledByDefault="true"
                          level="WARNING"
                          implementationClass="inspections.PatternSuggestionsInspection"/>

        <editor.linePainter implementation="ui.PatternHints"/>

        <lang.documentationProvider language="JAVA"
                                    order="first"
                                    implementationClass="ui.PatternDocumentation"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="DesignPatternDoc.menu" text="DesignPatternDoc">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action class="detection.DetectPatternsAction" id="detectPatterns" text="Scan for Patterns"/>
            <action class="actions.DocumentPatternAction" id="documentPattern" text="Document Pattern Instance"/>
        </group>
    </actions>
</idea-plugin>